{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Submit Event Declaration Report Request 1.0.0",
    "type": "object", 
    "required": [
          "declarationDetails"
        ],
    "additionalProperties": false,
    "properties": {
        "declarationDetails": {
            "type": "object",
            "required": [
              "erDetails",
              "erDeclarationDetails"
            ],
            "additionalProperties": false,
            "properties": {
              "erDetails": {
                "type": "object",
                "required": [
                  "pSTR",
                  "reportStartDate",
                  "reportEndDate"
                ],
                "additionalProperties": false,
                "properties": {
                  "pSTR": {
                    "type": "string",
                    "pattern": "[0-9]{8}[A-Z]{2}"
                  },
                  "reportStartDate": {
                    "$ref": "#/definitions/dateType"
                  },
                  "reportEndDate": {
                    "$ref": "#/definitions/dateType"
                  }
                }
              },
              "erDeclarationDetails": {
                "type": "object",
                "required": [
                  "submittedBy",
                  "submittedID"
                ],
                "additionalProperties": false,
                "properties": {
                  "submittedBy": {
                    "type": "string",
                    "enum": [
                      "PSA",
                      "PSP"
                    ]
                  },
                  "submittedID": {
                    "type": "string",
                    "pattern": "[A-Za-z0-9]{8}"
                  }
                }
              },
              "psaDeclaration": {
                "type": "object",
                "required": [
                  "psaDeclaration1",
                  "psaDeclaration2"
                ],
                "additionalProperties": false,
                "properties": {
                  "psaDeclaration1": {
                    "type": "string",
                    "enum": [
                      "Selected",
                      "Not Selected"
                    ]
                  },
                  "psaDeclaration2": {
                    "type": "string",
                    "enum": [
                      "Selected",
                      "Not Selected"
                    ]
                  }
                }
              },
              "pspDeclaration": {
                "description": "PSP declaration is mandatory if the ER is submitted by PSP",
                "type": "object",
                "required": [
                  "authorisedPSAID",
                  "pspDeclaration1",
                  "pspDeclaration2"
                ],
                "additionalProperties": false,
                "properties": {
                  "authorisedPSAID": {
                    "type": "string",
                    "pattern": "A[0-9]{7}"
                  },
                  "pspDeclaration1": {
                    "type": "string",
                    "enum": [
                      "Selected",
                      "Not Selected"
                    ]
                  },
                  "pspDeclaration2": {
                    "type": "string",
                    "enum": [
                      "Selected",
                      "Not Selected"
                    ]
                  }
                }
              }
            }
          }
       },
      "definitions": {
		"dateType": {
			"type": "string",
			"pattern": "^(((19|20)([2468][048]|[13579][26]|0[48])|2000)[-]02[-]29|((19|20)[0-9]{2}[-](0[469]|11)[-](0[1-9]|1[0-9]|2[0-9]|30)|(19|20)[0-9]{2}[-](0[13578]|1[02])[-](0[1-9]|[12][0-9]|3[01])|(19|20)[0-9]{2}[-]02[-](0[1-9]|1[0-9]|2[0-8])))$"
		}
    }
}